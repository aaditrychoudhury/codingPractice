
public class Solution {

	public static boolean isPalindrome(String str) {
		//Your code goes here
        //boolean isTrue = true;
        //int n = str.length();
        String s = new String();
        for(int i = str.length()-1;i>=0;i--){
            s+=str.charAt(i);
        }
        if(str.equals(s))
            return true;
        else
            return false;
        
	}

}
## one more method
int left = 0;
int right = str.lenght() -1;
while(left < right){
if(str.charAt(left) != str.charAt(right)){
return false;}
++left;
--right;
}
return true;

