public class Solution {

    public static int arrayRotateCheck(int[] arr){
    	//Your code goes here
        int k = 0;
        for(int i = 0;i<arr.length;++i){
            if(arr[i] == 1)
                break;
            else
                ++k;
        }
        if(k == arr.length-1)
            k = 0;
        return k;
    }

}
